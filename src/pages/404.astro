---
import { languages } from "../i18n/ui"
import { getLangFromUrl, getTranslations } from "../i18n/utils"
import Layout from "../layouts/Layout.astro"

const lang = getLangFromUrl(Astro.url) || "en"
const { metadata, notFound, heading } = getTranslations(lang)

export const getStaticPaths = () => {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }))
}
---

<Layout title={metadata.title} description={metadata.description} lang={lang}>
  <div
    class="flex flex-col items-center justify-center bg-gray-100 dark:bg-gray-900"
  >
    <h1 class="text-7xl font-bold text-gray-800 dark:text-gray-200">404</h1>
    <h2 class="mt-4 text-2xl text-gray-600 dark:text-gray-400">
      {heading.notFound}
    </h2>
    <a
      href={`/${lang}`}
      class="mt-6 rounded bg-blue-500 px-4 py-2 text-lg text-white hover:bg-blue-600 dark:bg-blue-700 dark:hover:bg-blue-800"
    >
      {notFound.goBack}
    </a>
  </div>
</Layout>
