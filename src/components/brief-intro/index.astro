---
import { getTranslations } from "../../i18n/utils"
import SchoolHistory from "./school-history.astro"

const { lang } = Astro.props

const { briefIntro } = getTranslations(lang)
---

<div class="vstack">
  <h2>{briefIntro.title}</h2>
  <ul class="disc-list">
    <li>{briefIntro.born}</li>
    <li>{briefIntro.age}</li>
    <li>{briefIntro["high school"]}</li>
    <li>
      {briefIntro.university}
      <ul>
        <li>{briefIntro["bachelor"]}</li>
      </ul>
    </li>
    <li>
      <details>
        <summary>
          {briefIntro.drawer.schools.title}
        </summary>
        <div>
          <p>{briefIntro.drawer.schools.description}</p>
          <SchoolHistory lang={lang} />
        </div>
      </details>
    </li>
  </ul>
  <h3>{briefIntro["lived in"].heading}</h3>
  <ul class="disc-list">
    <li>{briefIntro["lived in"].japan}</li>
    <li>{briefIntro["lived in"].philippines}</li>
    <li>{briefIntro["lived in"].newzealand}</li>
  </ul>
  <h3>{briefIntro.hobbies.heading}</h3>
  <ul class="disc-list">
    <li>{briefIntro.hobbies.programming}</li>
    <li>{briefIntro.hobbies.soccer}</li>
    <li>
      <details>
        <summary>
          {briefIntro.drawer.kendama.title}
        </summary>
        <div>
          <p>{briefIntro.drawer.kendama.description}</p>
          <iframe
            width="315"
            height="560"
            loading="lazy"
            src={`https://www.youtube.com/embed/9Y-NWFB--f8`}
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen></iframe>
        </div>
      </details>
    </li>
    <li>
      <details>
        <summary>
          {briefIntro.drawer.juggling.title}
        </summary>
        <div>
          <p>{briefIntro.drawer.juggling.description}</p>
          <iframe
            width="315"
            height="560"
            loading="lazy"
            src="https://www.youtube.com/embed/TaWXgxbzoOI"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen></iframe>
        </div>
      </details>
    </li>
    <li>{briefIntro.hobbies["shorinji kempo"]}</li>
    <li>{briefIntro.hobbies["table tennis"]}</li>
    <li>{briefIntro.hobbies.tennis}</li>
    <li>{briefIntro.hobbies.basketball}</li>
    <li>{briefIntro.hobbies.badminton}</li>
    <li>{briefIntro.hobbies.volleyball}</li>
    <li>{briefIntro.hobbies.baseball}</li>
    <li>{briefIntro.hobbies.softball}</li>
    <li>{briefIntro.hobbies.running}</li>
    <li>{briefIntro.hobbies["pen spinning"]}</li>
  </ul>
  <h3>{briefIntro["part time job"].heading}</h3>
  <ul class="disc-list">
    <li>{briefIntro["part time job"].westlake}</li>
  </ul>
</div>

<style>
  details {
    border: none;
    padding: 0;
    background-color: transparent;
  }

  details[open] iframe {
    display: block;
  }

  summary {
    cursor: pointer;
    font-weight: normal;
    margin: 0;
    padding: 0;
    background-color: transparent;
    border-radius: 0;
    list-style: none;
    display: inline;
    text-decoration: underline;
    outline: none;
  }

  summary::-webkit-details-marker {
    display: none;
  }

  summary:hover {
    text-decoration: none;
  }

  details p {
    padding: 10px 0;
    margin: 0;
  }

  iframe {
    display: none;
    width: auto;
    max-width: 100%;
    height: 560px;
    aspect-ratio: 9 / 16;
    border-radius: 10px;
    border-color: transparent;
  }

  .disc-list > li {
    font-size: large;
    line-height: 1.5;
  }
</style>
