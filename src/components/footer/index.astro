---
import { getTranslations } from "../../i18n/utils"
import ArrowUpIcon from "../../icons/arrow-up.astro"
import JapanIcon from "../../icons/japan.astro"
import NewZealandIcon from "../../icons/new-zealand.astro"
import SectionDivider from "../divider/section-divider.astro"
import Socials from "./socials.astro"
const { lang } = Astro.props
const { footer } = getTranslations(lang)
---

<SectionDivider />
<footer
  class="grid h-16 w-full max-w-[min(600px,100%)] grid-cols-3 place-items-center place-self-center"
>
  <a
    href={`/${lang === "ja" ? "en" : "ja"}`}
    class="flex w-28 items-center justify-center gap-2 rounded-md px-4 py-2 text-gray-500 transition-colors duration-300 hover:bg-zinc-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-zinc-800 dark:hover:text-gray-300"
    title={lang === "ja" ? "To English" : "日本語へ"}
  >
    {
      lang === "ja" ? (
        <NewZealandIcon size="1.4rem" />
      ) : (
        <JapanIcon size="1.4rem" />
      )
    }{footer.lang}</a
  >
  <a
    href=""
    class="hidden justify-center rounded-md px-4 py-2 text-gray-500 transition-colors duration-300 hover:bg-zinc-100 hover:text-gray-700 sm:block dark:text-gray-400 dark:hover:bg-zinc-800 dark:hover:text-gray-300"
    >{footer.scrollToTop}</a
  >
  <a
    href=""
    class="flex h-10 items-center justify-center rounded-md px-4 py-2 text-gray-500 transition-colors duration-300 hover:bg-zinc-100 hover:text-gray-700 sm:hidden dark:text-gray-400 dark:hover:bg-zinc-800 dark:hover:text-gray-300"
    ><ArrowUpIcon /></a
  >
  <Socials />
</footer>
