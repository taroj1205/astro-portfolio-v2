---
import { getTranslations } from "../../i18n/utils"
import ArrowUpIcon from "../../icons/arrow-up.astro"
import JapanIcon from "../../icons/japan.astro"
import NewZealandIcon from "../../icons/new-zealand.astro"
import SectionDivider from "../divider/section-divider.astro"
import Socials from "./socials.astro"
const { lang } = Astro.props
const { footer } = getTranslations(lang)
---

<SectionDivider />
<footer>
  <a
    href={`/${lang === "ja" ? "en" : "ja"}`}
    class="footer-link"
    title={lang === "ja" ? "To English" : "日本語へ"}
  >
    {
      lang === "ja" ? (
        <NewZealandIcon size="1.4rem" />
      ) : (
        <JapanIcon size="1.4rem" />
      )
    }{footer.lang}</a
  >
  <a href="" class="scroll scroll-text" title={footer.scrollToTop}
    >{footer.scrollToTop}</a
  >
  <a href="" class="scroll arrow-up" title={footer.scrollToTop}
    ><ArrowUpIcon /></a
  >
  <Socials />
</footer>

<style>
  footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0;
    width: min(600px, 100%);
    margin: 0 auto;
    height: 4rem;
  }

  .footer-link {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .arrow-up {
    display: none;
    font-size: 1.5rem;
  }

  a {
    text-decoration: none;
    color: var(--gray-color);
    height: 2.5rem;
    line-height: 2.5rem;
    display: grid;
    place-items: center;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
    border-radius: 0.375rem;
    padding: 0.25rem 0.5rem;
  }

  a:hover {
    color: hsl(0, 0%, 83%);
    background-color: hsl(0, 0%, 20%);
  }

  @media (max-width: 600px) {
    .arrow-up {
      display: flex;
    }
    .scroll-text {
      display: none;
    }
  }

  body:has(.scroll:active) {
    position: fixed;
    width: 100%;
    overflow-y: scroll;
  }
</style>

<style is:global>
  footer .footer-link,
  footer .social-icons {
    width: 7rem;
  }
</style>
