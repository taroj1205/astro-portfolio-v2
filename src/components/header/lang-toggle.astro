---
import JapanIcon from "../../icons/japan.astro"
import NewZealandIcon from "../../icons/new-zealand.astro"
const { lang } = Astro.props
---

<a
  href={`/${lang === "ja" ? "en" : "ja"}`}
  title={lang === "ja" ? "To English" : "日本語へ"}
  class="my-auto mr-2 flex h-10 w-10 items-center justify-center place-self-end rounded-full p-2 hover:bg-gray-100 sm:mr-8 sm:place-self-center dark:hover:bg-zinc-800"
>
  {
    lang === "ja" ? (
      <JapanIcon size="1.5rem" />
    ) : (
      <NewZealandIcon size="1.5rem" />
    )
  }</a
>
