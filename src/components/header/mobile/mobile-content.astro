---
import type { Locales } from "../../../i18n/ui"
import DropdownItem from "./../desktop/dropdown-item.astro"
import { items, titles } from "./../desktop/items"
const { lang } = Astro.props
---

<div class="mobile-content">
  {
    titles.map((title) => (
      <section>
        <h2>{title[lang as Locales]}</h2>
        <div class="social-icons">
          {
            items[title.en.toLowerCase()].map((item) => (
              <DropdownItem lang={lang} items={item} />
            ))
          }
        </div>
      </section>
    ))
  }
</div>

<style>
  .mobile-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding: 20px;
    overflow-y: auto;
    height: 100%;

    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    background-color: hsla(0, 0%, 0%, 0.9);

    width: calc(100% - 40px);
    padding-top: 3rem;
    margin-left: 0.5rem;
  }

  h2 {
    font-size: 24px;
    margin-bottom: 10px;
    color: var(--dark-text-color);
    text-align: left;
  }

  .social-icons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .social-icons a svg {
    width: 24px;

    height: auto;
  }
</style>

<style is:global>
  .mobile-content a {
    font-size: 1.125rem;
    padding: 10px;
    justify-content: center;
    width: -webkit-fit-content;
    width: fit-content;
  }
</style>
