---
import { getTranslations } from "../../i18n/utils"
import Languages from "./languages.astro"
import Projects from "./projects/index.astro"

const { lang } = Astro.props
const { heading } = getTranslations(lang)
---

<div class="vstack">
  <h2>{heading.programming.title}</h2>
  <h3>{heading.programming.openSource.title}</h3>
  <ul class="disc-list">
    <li>
      {heading.programming.openSource.yamada.title}
      <ul>
        <li>
          <a
            href="https://yamada-ui.com/community/team"
            target="_blank"
            rel="noopener noreferrer"
          >
            https://yamada-ui.com/community/team
          </a>
        </li>
      </ul>
    </li>
  </ul>
  <Languages lang={lang} />
  <Projects lang={lang} />
</div>

<style>
  a {
    color: var(--link-color);
  }

  a:hover {
    text-decoration: none;
  }
</style>
