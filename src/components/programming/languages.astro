---
import { getTranslations } from "../../i18n/utils"

const { lang } = Astro.props
const {
  heading: {
    programming: { languages, framework, library, thirdParty },
  },
} = getTranslations(lang)
---

<div class="flex flex-col gap-2">
  <h3 class="text-3xl font-bold">{languages}</h3>
  <ul class="list-inside list-disc">
    <li>JavaScript</li>
    <li>TypeScript</li>
    <li>HTML</li>
    <li>CSS</li>
    <li>Markdown</li>
    <li>Python</li>
  </ul>

  <h3 class="text-3xl font-bold">{framework}</h3>
  <ul class="list-inside list-disc">
    <li>Next.js</li>
    <li>Express</li>
    <li>React.js</li>
    <li>Node.js</li>
    <li>Flask</li>
    <li>Tailwind CSS</li>
  </ul>

  <h3 class="text-3xl font-bold">{library}</h3>
  <ul class="list-inside list-disc">
    <li>Next UI</li>
    <li>Chakra UI</li>
    <li>Material UI</li>
    <li>Joy UI</li>
    <li>Yamada UI</li>
  </ul>

  <h3 class="text-3xl font-bold">SQL</h3>
  <ul class="list-inside list-disc">
    <li>MySQL</li>
    <li>SQLite</li>
    <li>PostgreSQL</li>
  </ul>

  <h3 class="text-3xl font-bold">{thirdParty}</h3>
  <ul class="list-inside list-disc">
    <li>Supabase</li>
    <li>Vercel</li>
    <li>Netlify</li>
    <li>GitHub</li>
    <li>Auth0</li>
    <li>Clerk</li>
  </ul>
</div>
